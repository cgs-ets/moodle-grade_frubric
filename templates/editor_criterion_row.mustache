<tr data-criterion-group="{{criteriongroupid}}" data-mode="{{mode}}" class="criterion-header"
    id="{{^rerender}}{{id}}{{/rerender}}{{#rerender}}{{cid}}{{/rerender}}" data-criterion-levels="{{levelids}}">

    {{^preview}}
        <th class="fr-header act">
            <div id="delCriterion" class="flex-actions">
                <span class="del-criterion" title="Delete criterion"><i class="fa fa-close"></i></span>
            </div>
        </th>
        <th class="fr-header crit-desc">
            <textarea rows="4"  cols="131" disabled="true" class="criterion-description" placeholder= "Click to edit description">{{description}}</textarea>
        </th>
    {{/preview}}

    {{#preview}}
        <th class="fr-header crit-desc">
            <textarea rows="4"  cols="110"
            disabled="true" class="criterion-description">{{description}}</textarea>
        </th>
     {{/preview}}
</tr>

