    {{/rerender}}
{{/new}}

{{^preview}}

    {{#js}}
        require(['gradingform_frubric/criterion_control'],
        function(CriterionControl) {
            CriterionControl.init("{{id}}");
        });
    {{/js}}

{{/preview}}