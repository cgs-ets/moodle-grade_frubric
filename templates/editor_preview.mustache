<div class="preview-frubric-form">

    {{#criteria}}
    <table class ="preview-table table-responsive">
        <thead>
            <tr>
                <th>
                    <p class ='frubric-descriptor-preview'>{{description}}</p>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    {{#levels}}
                    <table class="inner-level-table preview">
                        {{#level}}
                        <tr>
                            <td class ="score-preview">
                                <p>{{score}}</p>
                            </td>
                            <td>
                                {{#descriptors}}
                                <input disabled type="checkbox" {{#checked}}checked{{/checked}}> {{descText}} <br>
                                {{/descriptors}}
                            </td>
                        </tr>
                        {{/level}}
                        <tr>
                            <td>
                                <p><strong>Total</strong> </p>
                            </td>
                            <td>
                                <strong><p>{{levelscore}}/{{totaloutof}}</strong> {{#outcomename}}&nbsp;&nbsp;&nbsp;&nbsp; Outcome: {{outcomename}}{{/outcomename}} </p>
                            </td>
                        </tr>
                       
                    </table>
                    {{/levels}}
                </td>
            </tr>

        </tbody>
    </table>
    {{/criteria}}

</div>

