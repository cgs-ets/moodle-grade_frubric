{{^edit}}
    <tr>
        <td  class="level-mark">
            <textarea  class="fmark" placeholder="{{#str}}mark, gradingform_frubric{{/str}}"></textarea>
            {{#firstLevel}}
             <div id="addRow" class="flex-actions">
              <span class="add-criterion" title="Add level"><i class="fa fa-plus"></i></span>
            </div>
            {{/firstLevel}}
        </td>
        <td>
            <div class="standard-desc-container"></div>

            <div class="add-descriptor">
                <button class="btn btn-primary add-desc-btn">{{#str}}adddescriptorlabel, gradingform_frubric{{/str}}</button>
            </div>
        </td>
    </tr>
{{/edit}}

{{#edit}}
    {{#levels}}
        <tr>
            <td  class="level-mark">
                <textarea  class="fmark" placeholder="{{#str}}mark, gradingform_frubric{{/str}}"  data-level-id ="{{id}}">{{score}}</textarea>
            </td>
            <td>
             {{> gradingform_frubric/level_decriptors_delete_set}}

                <div class="standard-desc-container">

                {{#descriptors}}
                    <div class="checkbox-container" data-type="level" id="{{id}}" data-parent-id="{{definitionid}}">
                        <input  type="checkbox" {{#edit}} disabled {{/edit}}  class="standard-check" data-container-id="{{id}}-{{definitionid}}" {{#checked}} checked {{/checked}}>
                        <textarea class="standard-desc" rows="3" cols="85" data-container-id="{{id}}-{{definitionid}}" placeholder="{{#str}}editleveldesc, gradingform_frubric{{/str}}" >{{descText}}</textarea>
                        <span class="action-el"><i class="fa fa-close" title="Delete descriptor"></i></span>
                        <br>
                    </div>
                {{/descriptors}}
                </div>
                    <div class="add-descriptor">
                        <button class="btn btn-primary add-desc-btn">{{#str}}adddescriptorlabel, gradingform_frubric{{/str}}</button>
                    </div>
            </td>
        </tr>
    {{/levels}}
{{/edit}}