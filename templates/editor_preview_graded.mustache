<div class="graded-form-h">

    {{#criteria}}
    <table>
        <thead>
            <tr>
                <th>
                    <p>{{description}}</p>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    {{#levels}}
                    <table class="inner-level-table graded">
                        {{#level}}
                        <tr>
                            <td class ='frubric-score-column'>
                                <p>{{score}}</p>
                            </td>
                            <td>
                                {{#descriptors}}
                                <input disabled type="checkbox" {{#checked}}checked{{/checked}}> {{descText}} <br>
                                {{/descriptors}}
                            </td>
                        </tr>
                        {{/level}}
                        <tr>
                            <td>
                                <p><strong>{{criterionlabel}}</strong> </p>
                            </td>
                            <td>
                                <strong><span class='frubric-total-level'> {{levelscore}}/{{totaloutof}}</span></strong>  {{#outcomename}}&nbsp;&nbsp;&nbsp;&nbsp; Outcome: {{outcomename}}{{/outcomename}} </p>
                            </td>
                        </tr>
                       
                    </table>
                    {{/levels}}
                </td>
            </tr>

        </tbody>
    </table>

    {{/criteria}}





</div>